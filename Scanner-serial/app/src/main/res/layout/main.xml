<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="工序："
                android:id="@+id/Text_job"
                android:textSize="10pt"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="未授权"
                android:id="@+id/Text_job_show"
                android:textSize="10pt" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_alignLeft="@+id/Manual_type_button"
            android:layout_alignStart="@+id/Manual_type_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="姓名："
                android:id="@+id/textView3"
                android:layout_alignTop="@+id/Text_name_show"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="未授权"
                android:id="@+id/Text_name_show"
                android:layout_below="@+id/Text_job_id"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="工号："
                android:id="@+id/textView4"
                android:layout_below="@+id/Text_job"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Text_job_id"
                android:text="未授权"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignRight="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="订单号："
                android:id="@+id/textS6"
                android:textColor="#ff0000"
                android:textSize="35sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/DoorID"
                android:textSize="35sp"
                android:textColor="#ff0000"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/version"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textSize="5pt" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="扫码枪ID："
        android:id="@+id/gun_id_text"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/version"
        android:textSize="5pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/gun_id"
        android:text="000000000000"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/gun_id_text"
        android:textSize="5pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/Text_main_show"
        android:textSize="120dp"
        android:textColor="#ff2f00"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/linearLayout2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Text_sec_show"
        android:visibility="invisible"
        android:textSize="35dp"
        android:textColor="#000000"
        android:shadowColor="#fff700"
        android:background="#fff800"
        android:layout_below="@+id/Text_main_show"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/but_is_arr"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/version"
        android:layout_below="@+id/Text_sec_show"
        android:layout_centerHorizontal="true"
        android:text="完成"
        android:textSize="20pt"
        android:visibility="invisible" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/but_no_arr"
        android:visibility="invisible"
        android:textSize="20pt"
        android:layout_below="@+id/Text_sec_show"
        android:layout_alignRight="@+id/but_exit"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Errorbutton"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:text="报错"
        android:textSize="12pt"
        android:visibility="visible"
        android:layout_alignTop="@+id/Manual_type_button"
        android:layout_toRightOf="@+id/Manual_type_button"
        android:layout_toEndOf="@+id/Manual_type_button"
        android:layout_marginTop="6dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登出"
        android:id="@+id/but_exit"
        android:textSize="12pt"
        android:visibility="visible"
        android:layout_alignTop="@+id/Manual_type_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/Manual_type_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手动输入"
        android:id="@+id/Manual_type_button"
        android:textSize="12pt"
        android:visibility="visible"
        android:layout_above="@+id/version"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
